extends ../includes/layout.pug

block content
    main
        if editMode
            form.product-form(action="/admin/edit-product", method="POST" )
                .form-control
                    label(for="title") Title
                    input(type="text", name="title", value=product.title)#title
                .form-control
                    label(for="imgURL") Image URL
                    input(type="text", name="imgURL", value=product.imgURL)#imgUrl
                .form-control
                    label(for="desc") Description
                    textarea(name="desc", cols="42", rows="10")#desc #{product.desc}
                .form-control
                    label(for="price") Price
                    input(type="text", name="price", value=product.price)#price
                    input(type="hidden", name="id", value=product.id)
                    button.btn(type="submit") Update Product
        else
            form.product-form(action="/admin/add-product", method="POST" )
                .form-control
                    label(for="title") Title
                    input(type="text", name="title")#title
                .form-control
                    label(for="imgURL") Image URL
                    input(type="text", name="imgURL")#imgUrl
                .form-control
                    label(for="desc") Descrition
                    textarea(name="desc", cols="42", rows="10")#desc
                .form-control
                    label(for="price") Price
                    input(type="text", name="price")#price
                    button.btn(type="submit") Add Product